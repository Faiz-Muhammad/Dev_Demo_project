<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form">
    <h2>Sign up</h2>
    <label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "Phone Number ", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.text_area :address, autofocus: true, autocomplete: "address", placeholder: "Address", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </label><br />
    <label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br /><br />

    <div class="actions">
      <%= f.submit "Sign up", class: "button-design" %>
    </div><br />
    <div>
      <p>(already have an account?) <%= render "devise/shared/links" %></p>
    </div>

  </div>
<% end %>

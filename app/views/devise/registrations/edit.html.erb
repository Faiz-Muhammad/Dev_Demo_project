<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form">
    <h2>Edit your profile</h2>
    <label>
      <%= image_tag((current_user.image), class: "avatar img-circle img-thumbnail") %>
      <h6>Upload a different photo</h6>
      <%= f.file_field :image %>
    </label><br />
    <label>
      <%= f.text_field :name, autofocus: true, autocomplete: 'name', placeholder: 'Name', class: 'input' %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <label>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "Phone Number ", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.text_area :address, autofocus: true, autocomplete: "address", placeholder: "Address", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.password_field :password, placeholder: "Password", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <i>(leave blank if you don't want to change it)</i>
      <% end %><br />
    </label><br />
    <label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label><br />
    <label>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current Password", class: "input" %>
      <div class="line-box">
        <div class="line"></div>
      </div>
      <i>(we need your current password to confirm your changes)</i>
    </label><br /><br />
    <div class="actions">
      <%= f.submit "Update", class: "button-design" %> <%= link_to "Back", :back, class: "btn button-design" %>
    </div>
  </div>
<% end %>
